<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<RelativeLayout
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:id="@+id/home_tab_icon"
        android:src="@mipmap/home_tab_activity"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@id/home_tab_icon"
        android:id="@+id/call_log_message_count"
        android:layout_gravity="right"
        style="@style/NoticeCountStyle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="9"/>
</RelativeLayout>
    <TextView
        android:id="@+id/home_tab_tex"
        android:gravity="center"
        android:text="活动"
        android:textSize="11sp"
        android:textColor="@drawable/home_tab_text_color_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>