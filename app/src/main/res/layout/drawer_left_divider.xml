<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/navigation_item_bg"
    android:layout_height="@dimen/divider_item_height"
    android:paddingLeft="@dimen/horizontal_padding_large"
    android:paddingRight="@dimen/horizontal_padding_large"
    android:orientation="vertical">

    <View
        android:id="@+id/left_dot"
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_normal"
        android:background="@drawable/dot_gray" />

    <View
        android:layout_toRightOf="@+id/left_dot"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_centerVertical="true"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="1px" />

</RelativeLayout>