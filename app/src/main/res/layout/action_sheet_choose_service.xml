<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/action_choose_service_title"
        android:gravity="center">
    <TextView
        android:id="@+id/service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="小时工"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/choose_service_recycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="@string/layoutManager_LinearLayout"
        tools:listitem="@layout/action_choose_service_adapter"
        android:layout_marginLeft="@dimen/mainfragment_srarch_left"
        android:layout_marginRight="@dimen/mainfragment_srarch_left"
        android:visibility="visible"/>
    <Button
        android:id="@+id/action_cancel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:text="取消"
        android:textSize="16sp"
        android:textColor="@color/homepageServerText1"/>

    

</LinearLayout>