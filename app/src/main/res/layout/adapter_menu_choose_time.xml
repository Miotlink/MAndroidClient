<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_choose_time_lin"
    android:layout_width="80dp"
    android:layout_height="60dp"
    android:background="@mipmap/client_v330_ic_time_choose"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周四"
                    android:textColor="@color/homepageServerText1"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/menu_full_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[约满]"
                    android:textColor="@color/choose_time_full_time"
                    android:textSize="11sp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="3月22号"
                android:textColor="@color/homepageServerText1"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>