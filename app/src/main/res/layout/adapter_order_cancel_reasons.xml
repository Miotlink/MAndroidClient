<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cancel_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_item_height"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/cancel_reasons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin_left_right"
        android:textColor="@color/homepageServerText1"
        android:textSize="14sp"
        tools:text="迟到" />

    <ImageView
        android:id="@+id/item_selected"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_margin_left_right"
        android:background="@mipmap/client_v330_ic_orders_choose" />
</RelativeLayout>