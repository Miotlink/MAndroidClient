<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background_color"
    tools:context="com.homepaas.sls.ui.personalcenter.more.MoreActivity">


    <com.homepaas.sls.ui.widget.CenterTitleToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="设置" />


    <TextView
        android:id="@+id/app_version"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:drawableTop="@mipmap/app"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:textColor="@color/homepageServerText1"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:text="嗖搜 v1.0.1" />

    <TextView
        android:id="@+id/tv_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_height"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawableRight="@mipmap/right_gray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/horizontal_padding_normal"
        android:paddingRight="@dimen/horizontal_padding_normal"
        android:text="问题反馈"
        android:textColor="@color/homepageServerText1"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/app_version" />


    <TextView
        android:id="@+id/tv_zj_live"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_height"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawableRight="@mipmap/right_gray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/horizontal_padding_normal"
        android:paddingRight="@dimen/horizontal_padding_normal"
        android:text="关于助家生活"
        android:textColor="@color/homepageServerText1"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_feedback" />

    <View
        android:id="@+id/view_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/layout_vertical_divider"
        app:layout_constraintTop_toBottomOf="@+id/tv_zj_live" />


    <TextView
        android:id="@+id/tv_item_service_call"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_height"
        android:background="@color/white"
        android:drawableRight="@mipmap/right_gray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/horizontal_padding_normal"
        android:paddingRight="@dimen/horizontal_padding_normal"
        android:text="联系我们"
        android:textColor="@color/homepageServerText1"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/view_divider1" />

    <View
        android:id="@+id/view_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/layout_vertical_divider"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_service_call" />

    <TextView
        android:id="@+id/tv_item_user_agreement"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_height"
        android:background="@color/white"
        android:drawableRight="@mipmap/right_gray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/horizontal_padding_normal"
        android:paddingRight="@dimen/horizontal_padding_normal"
        android:text="用户服务协议"
        android:textColor="@color/homepageServerText1"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/view_divider2" />

    <Button
        android:id="@+id/logout"
        style="@style/CommonPressedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/logout_button"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_user_agreement" />

</android.support.constraint.ConstraintLayout>
