<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <!--時間-->
    <LinearLayout
        android:id="@+id/ly_top_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/minute_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/appText3"
            android:textSize="14sp"
            tools:text="10:23" />
    </LinearLayout>

    <!--线条-->
    <LinearLayout
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_marginRight="21dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/order_status_line" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/order_flow_gray_bg" />

        <ImageView
            android:id="@+id/img_de_left"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/order_status_line" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/appText3"
            android:textSize="15sp"
            tools:text="待接单" />

        <TextView
            android:id="@+id/tv_server_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="12dp"
            android:paddingTop="4dp"
            android:textColor="@color/appText3"
            android:textSize="12sp"
            tools:text="ddddddddddddddddddddddddddddddddddd" />
    </LinearLayout>
</LinearLayout>
