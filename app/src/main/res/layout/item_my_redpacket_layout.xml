<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/padding_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/packet_img"
            android:src="@mipmap/indate_packet"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/packet_money"
            android:text="30.00元"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <TextView
        android:id="@+id/packet_name"
        android:layout_toRightOf="@+id/left_layout"
        android:textSize="@dimen/fontSizeMidleTitle"
        android:text="现金红包"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/date_text"
        android:layout_toRightOf="@+id/left_layout"
        android:text="有效期"
        android:textColor="@color/fontColorLight"
        android:layout_below="@+id/packet_name"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/date"
        android:layout_toRightOf="@+id/date_text"
        android:layout_below="@+id/packet_name"
        android:textColor="@color/fontColorLight"
        android:layout_marginTop="@dimen/margin_small"
        android:text="2016-1-2 9:00 至 2-19-1-3 10:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>