<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:background="@drawable/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="退款记录"
            android:padding="@dimen/padding_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/padding_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/refund_time"
            tools:text="2016-08-28 17:18"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/service_time"
            android:textColor="@color/appText3"
            tools:text="2012-1-12 12:56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/refund_status"
            tools:text="退款完成"
            android:textColor="@color/decorateOrange"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/refund_money"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="¥70.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/refund_str"
        android:gravity="right"
        android:padding="@dimen/padding_small"
        android:textColor="@color/appTextLight"
        android:text="应退¥90.0 误工费¥，优惠券扣除¥20.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>