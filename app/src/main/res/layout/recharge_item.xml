<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingBottom="@dimen/vertical_padding_small"
    android:paddingLeft="@dimen/horizontal_padding_normal"
    android:paddingRight="@dimen/horizontal_padding_normal"
    android:paddingTop="@dimen/vertical_padding_small">

    <ImageView
        android:id="@+id/image"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        tools:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="130dp"
        android:textSize="17sp"
        tools:text="50元充值卡"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="130dp"
        android:textColor="@color/appTextNormal"
        tools:text="50元充值卡"/>

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="130dp"
        android:textColor="@color/decorateOrange"
        tools:text="￥50.00元"/>

    <Button
        android:id="@+id/button"
        android:textSize="14sp"
        style="@style/CommonButton"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="充值"/>
</RelativeLayout>