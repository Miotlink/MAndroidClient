<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/padding_small"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单信息"
        android:textSize="18sp" />
    <View
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:background="@color/colorDividerNormal"
        android:layout_height="1px"/>
    <!--联系人-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="联系人："
            android:textColor="@color/appText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/client_name"
            android:textColor="@color/appText3"
            tools:text="王女士"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--服务电话-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="服务电话："
            android:textColor="@color/appText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/client_phone"
            android:textColor="@color/appText3"
            tools:text="13247185569"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--服务地址-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="服务地址："
            android:textColor="@color/appText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <TextView
            android:id="@+id/service_address"
            android:textColor="@color/appText3"
            tools:text="蛋龟街19号低开国际中心2B猪价生活"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:background="@color/colorDividerNormal"
        android:layout_height="1px"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="订单号："
            android:textColor="@color/appText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/order_code"
            android:textColor="@color/appText3"
            tools:text="蛋龟街19号低开国际中心2B猪价生活"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--下单时间-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="下单时间："
            android:textColor="@color/appText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/place_time"
            android:textColor="@color/appText3"
            tools:text="496254785"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--接单时间-->
    <LinearLayout
        android:id="@+id/accept_time_layout"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/accept_time_title"
            android:text="接单时间："
            android:textColor="@color/appText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/accept_time"
            android:textColor="@color/appText3"
            tools:text="2016-12-7 19:34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--付款时间-->
    <LinearLayout
        android:id="@+id/pay_time_layout"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/paid_time_title"
            android:text="付款时间："
            android:textColor="@color/appText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/paid_time"
            android:textColor="@color/appText3"
            tools:text="2018-9-7 19:34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/confirm_time_layout"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="确认时间："
            android:textColor="@color/appText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/confirm_time"
            android:textColor="@color/appText3"
            tools:text="2016-9-9 17:53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/finish_time_layout"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="完成时间："
            android:textColor="@color/appText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" />

        <TextView
            android:id="@+id/finish_time"
            android:textColor="@color/appText3"
            tools:text="2016-9-9 17:53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cancel_time_layout"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="取消时间："
            android:textColor="@color/appText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" />

        <TextView
            android:id="@+id/cancel_time"
            android:textColor="@color/appText3"
            tools:text="2016-9-9 17:53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>