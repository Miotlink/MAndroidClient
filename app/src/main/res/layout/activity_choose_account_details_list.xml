<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dismiss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/back_ll"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:scaleType="center"
                android:src="@mipmap/return_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/account_type_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/choose_account_type_height"
            android:background="@drawable/shape_no_top_rectangle"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/wallet_all"
                android:drawablePadding="@dimen/choose_drawable_left"
                android:drawableStart="@mipmap/wallet_all"
                android:gravity="center_vertical"
                android:text="@string/choose_all"
                android:textSize="15sp"
                android:textColor="@color/appText"/>


            <ImageView
                android:id="@+id/wallet_choose_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:src="@mipmap/wallet_chose" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/account_type_income"
            android:layout_width="match_parent"
            android:layout_height="@dimen/choose_account_type_height"
            android:background="@drawable/shape_no_top_rectangle"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/wallet_income"
                android:drawablePadding="@dimen/choose_drawable_left"
                android:drawableStart="@mipmap/wallet_income"
                android:gravity="center_vertical"
                android:text="@string/choose_income"
                android:textSize="15sp"
                android:textColor="@color/appText"/>


            <ImageView
                android:id="@+id/wallet_choose_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:src="@mipmap/wallet_chose" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/account_type_expend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/choose_account_type_height"
            android:background="@color/white"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/wallet_expend"
                android:drawablePadding="@dimen/choose_drawable_left"
                android:drawableStart="@mipmap/wallet_expend"
                android:gravity="center_vertical"
                android:text="@string/choose_expenditure"
                android:textSize="15sp"
                android:textColor="@color/appText"/>


            <ImageView
                android:id="@+id/wallet_choose_expend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:src="@mipmap/wallet_chose" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>