<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".ui.search.NewSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <FrameLayout
            style="@style/SearchTitleBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_search_top"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/auto_edit_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginEnd="50dp"
                android:layout_marginLeft="@dimen/service_result_left"
                android:layout_marginRight="50dp"
                android:layout_marginStart="@dimen/service_result_left"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/search_bar_background">

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fillViewport="true"
                    android:orientation="vertical"
                    android:scrollbars="vertical">

                    <com.homepaas.sls.ui.widget.LimitEditText
                        android:focusableInTouchMode="true"
                        android:focusable="true"
                        android:id="@+id/search_edit_text"
                        android:layout_width='match_parent'
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/service_result_left"
                        android:layout_marginStart="@dimen/service_result_left"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@mipmap/search"
                        android:drawablePadding="8dp"
                        android:drawableStart="@mipmap/search"
                        android:hint="@string/common_search_edittext_hint"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"
                        android:textColor="@color/homepageServerText1"
                        android:textColorHint="@color/edittextcolor"
                        android:textSize="14sp"
                        android:gravity="center_vertical|left"
                        android:textCursorDrawable="@null"/>
                </ScrollView>

                <ImageView
                    android:id="@+id/search_edit_clean"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/login_clean" />
            </FrameLayout>

            <TextView
                android:id="@+id/cancel"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/service_result_left"
                android:text="@string/cancel"
                android:textColor="@color/appPrimary" />
        </FrameLayout>

        <FrameLayout
            style="@style/SearchTitleBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--详细搜索结果-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/detail_result_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/service_result_left"
                android:layout_marginRight="@dimen/service_result_left"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone"
                app:layoutManager="@string/layoutManager_LinearLayout" />

            <!--大家都在搜和历史记录-->
            <LinearLayout
                android:id="@+id/service_type_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/service_result_left"
                    android:layout_marginRight="@dimen/service_result_left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/common_taglayout_first_title"
                        android:textColor="@color/appText10"
                        android:textSize="15sp" />

                    <com.homepaas.sls.ui.tag.TagLayout
                        android:id="@+id/common_tagview_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:lineSpacing="5dp"
                        app:tagSpacing="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/service_result_left"
                    android:layout_marginRight="@dimen/service_result_left"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="22dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/common_taglayout_second_title"
                            android:textColor="@color/appText10"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/delete_history"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/search_delete" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/no_history_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="最近无搜索历史"
                            android:textColor="@color/appText3" />

                        <com.homepaas.sls.ui.tag.TagLayout
                            android:id="@+id/common_tagview_history"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:lineSpacing="5dp"
                            app:tagSpacing="5dp" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <!--没有搜索结果展现-->
            <LinearLayout
                android:id="@+id/no_result_lin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/no_result_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/client_v3_1_0_ic_homepage_no_evaluate" />

                    <TextView
                        android:layout_below="@+id/no_result_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/common_no_result_text" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/service_result_left"
                    android:layout_marginRight="@dimen/service_result_left">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/people_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/common_look_people_search"
                            android:textSize="15sp"/>
                        <View
                            android:layout_width="60dp"
                            android:layout_height="1dp"
                            android:background="@color/common_split_line_color"
                            android:layout_toRightOf="@id/people_search"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"/>
                        <View
                            android:layout_width="60dp"
                            android:layout_height="1dp"
                            android:background="@color/common_split_line_color"
                            android:layout_toLeftOf="@id/people_search"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"/>
                    </RelativeLayout>
                    <com.homepaas.sls.ui.tag.TagLayout
                        android:id="@+id/common_tagview_people_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:lineSpacing="5dp"
                        app:tagSpacing="5dp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
