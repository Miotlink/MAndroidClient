<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/compensation_reason_item">

    <TextView
        android:id="@+id/reason_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/homepageServerText1"
        android:textSize="15sp"
        tools:text="工人迟到"
        android:layout_centerVertical="true"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/time_recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/reason_time"
        android:orientation="horizontal"
        app:layoutManager="@string/layoutManager_LinearLayout"
        android:layout_centerVertical="true"/>

    <View
        style="@style/fenge_view1"
        android:layout_alignParentBottom="true" />
</RelativeLayout>