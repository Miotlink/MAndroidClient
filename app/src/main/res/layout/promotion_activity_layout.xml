<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_box"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/special_activity_satisfied_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/special_favor_title"
            android:fontFamily="Noto"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/hourly_worker"
            android:drawablePadding="@dimen/padding_small"
            android:padding="@dimen/padding_small"
            tools:text="特价小时工" />

        <ImageView
            android:id="@+id/special_favor_help"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:textSize="16sp"
            android:paddingRight="@dimen/padding_small"
            android:text="- ¥50"
            android:id="@+id/textView8" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/help" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/promotion_activity_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small">

        <TextView
            android:id="@+id/promotion_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/service"
            android:padding="@dimen/padding_tiny"
            tools:text="满80返20"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/promotion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_small"
            tools:text="已享优惠满80 返 20"
            android:textColor="@color/colorRedPacket" />

        <ImageView
            android:id="@+id/promotion_hint_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_small"
            android:src="@mipmap/help" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/special_hint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small">

        <TextView
            android:id="@+id/special_title"
            android:fontFamily="Noto"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRedPacket"
            tools:text="特价小时工优惠活动" />

        <ImageView
            android:id="@+id/special_hint_help"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:src="@mipmap/help" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_favor_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small">

        <TextView
            android:id="@+id/textView7"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单总价¥ " />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            tools:text="89" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="优惠¥  " />

        <TextView
            android:id="@+id/order_favor_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            tools:text="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="待支付¥  " />

            <TextView
                android:id="@+id/order_topay_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:gravity="center"
                tools:text="89"
                android:textColor="@color/decorateOrange" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>