<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/action_icon_frame"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/standard_cell_margin"
        android:layout_marginRight="5dp"
        android:layout_width="16dp"
        android:layout_height="16dp">
        <ImageView
            android:id="@+id/action_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/cashback1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>


    <TextView
        android:id="@+id/action_description"
        android:layout_centerVertical="true"
        android:text="在线支付满200减20"
        android:textColor="@color/appTextSubTitle"
        android:layout_toRightOf="@id/action_icon_frame"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/help"
        android:src="@mipmap/query"
        android:layout_toRightOf="@id/action_description"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/action_indicator"
       android:src="@mipmap/accord_with"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>