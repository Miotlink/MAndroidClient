<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_head_view"
        android:visibility="gone"
        layout="@layout/list_head_view" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_cion"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/service_or_worker_icon_default" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_minute_bg"
                android:padding="2dp"
                android:textColor="@color/count_down_time"
                android:textSize="11sp"
                tools:text="0.5分" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:textColor="@color/appText10"
                android:textSize="14sp"
                tools:text="46岁" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_server_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:singleLine="true"

                android:textColor="@color/homepageServerText1"
                android:textSize="15sp"
                tools:text="北京妇联家政服务中心sdfsdf" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/appText10"
                android:textSize="14sp"
                tools:text="3.7公里" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_subscribe"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_subscribe_bg"
            android:text="预约"
            android:textColor="@color/count_down_time"
            android:textSize="13sp" />

    </LinearLayout>
</LinearLayout>