<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"
    android:background="@color/common_background_color"
    tools:context="com.homepaas.sls.ui.personalcenter.more.MoreActivity">
    <android.support.design.widget.AppBarLayout android:elevation="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.homepaas.sls.ui.widget.CenterTitleToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="设置"/>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:padding="16dp">

            <TextView
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/app"
                android:textColor="@color/homepageServerText1"
                android:textSize="14sp"
                tools:text="嗖搜 v1.0.1" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/item_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personal_item_height"
            android:background="@color/white"
            android:paddingLeft="@dimen/horizontal_padding_normal"
            android:paddingRight="@dimen/horizontal_padding_normal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="问题反馈"
                android:textColor="@color/homepageServerText1"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:src="@mipmap/right_gray" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:divider="@drawable/layout_vertical_divider"
            android:orientation="vertical"
            android:showDividers="middle">

            <FrameLayout
                android:id="@+id/item_about_sousou"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_item_height"
                android:paddingLeft="@dimen/horizontal_padding_normal"
                android:paddingRight="@dimen/horizontal_padding_normal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="关于助家生活"
                    android:textColor="@color/homepageServerText1"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:src="@mipmap/right_gray" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/item_service_call"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_item_height"
                android:paddingLeft="@dimen/horizontal_padding_normal"
                android:paddingRight="@dimen/horizontal_padding_normal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="联系我们"
                    android:textColor="@color/homepageServerText1"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_gray" />

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/item_like"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_item_height"
                android:paddingLeft="@dimen/horizontal_padding_normal"
                android:paddingRight="@dimen/horizontal_padding_normal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="喜欢助家生活？给个鼓励吧"
                    android:textColor="@color/homepageServerText1"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:src="@mipmap/right_gray" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/item_user_agreement"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_item_height"
                android:paddingLeft="@dimen/horizontal_padding_normal"
                android:paddingRight="@dimen/horizontal_padding_normal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="用户服务协议"
                    android:textColor="@color/homepageServerText1"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:src="@mipmap/right_gray" />
            </FrameLayout>
        </LinearLayout>

        <Button
            android:id="@+id/logout"
            style="@style/CommonPressedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/logout_button" />

    </LinearLayout>
</LinearLayout>
