<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selected_rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="11.5dp"
    android:paddingTop="11.5dp">

    <ImageView
        android:id="@+id/service_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="21dp"
        android:src="@mipmap/default_image" />

    <TextView
        android:id="@+id/service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/service_icon"
        android:layout_toRightOf="@+id/service_icon"
        android:ellipsize="end"
        android:lines="1"
        android:text="冰箱"
        android:textColor="@color/home_type_txt"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/service_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/service_icon"
        android:layout_marginTop="4.5dp"
        android:layout_toRightOf="@+id/service_icon"
        android:ellipsize="end"
        android:lines="1"
        android:text="170元/台"
        android:textColor="@color/count_down_time"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/item_selected"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/subscribe_order_list_no_select" />

    <View
        style="@style/fenge_view1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/service_icon"
        android:visibility="gone" />


</RelativeLayout>