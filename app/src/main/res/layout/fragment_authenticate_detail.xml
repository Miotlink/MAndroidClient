<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_normal"
        android:layout_marginStart="@dimen/horizontal_margin_normal"
        android:layout_marginTop="@dimen/vertical_margin_normal"
        android:text="@string/dialog_auth_detail"
        android:textSize="18sp"/>


    <GridView
        android:id="@+id/gridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="2"
        tools:listitem="@layout/authenticate_detail_item"/>
</LinearLayout>