<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_item_height"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/common_margin_left_right"
    android:layout_marginRight="@dimen/common_margin_left_right">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/hour_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/appText10"
            android:textSize="10sp"
            tools:text="09:30" />

        <TextView
            android:id="@+id/yuar_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/appText10"
            android:textSize="9sp"
            tools:text="2010/03/09" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="23dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/upper_icon"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:src="@mipmap/client_v3_1_0_ic_distance_vertical" />
        <ImageView
            android:id="@+id/in_icon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/client_v3_1_0_ic_blue_dot"/>
        <ImageView
            android:id="@+id/lower_icon"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:src="@mipmap/client_v3_1_0_ic_distance_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/accept_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/appText10"
        android:textSize="13sp"
        tools:text="设计师创意园"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="2" />

</LinearLayout>