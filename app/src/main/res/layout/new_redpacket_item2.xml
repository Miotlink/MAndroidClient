<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/redPacket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:orientation="vertical">

        <RelativeLayout
            android:shadowColor="@color/appShandow"
            android:shadowDx="0"
            android:shadowDy="7"
            android:shadowRadius="1"
            android:clickable="true"
            android:id="@+id/couponbd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/hongbaob">

            <RelativeLayout
                android:gravity="center"
                android:layout_width="90dp"
                android:layout_height="wrap_content">
                <LinearLayout
                  android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:id="@+id/price"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/price_unit"
                        android:textSize="18sp"
                        android:text="￥"
                        android:textColor="@color/appText7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/redpacket_price"
                        android:textSize="40sp"
                        tools:text="80"
                        android:textColor="@color/appText7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:layout_below="@+id/price"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/amount"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/appText7"
                    tools:text="满80元可用"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:id="@+id/fengexian"
                android:background="@null"
                android:src="@mipmap/shuxian"
                android:layout_width="wrap_content"
                android:layout_height="70dp" />
            <LinearLayout
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/fengexian"
                android:layout_toLeftOf="@+id/use_this"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/redpacket_name"
                    android:textColor="@color/appText"
                    tools:text="新人红包"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/redpacket_kind"
                    android:drawableLeft="@mipmap/yuan"
                    android:drawableStart="@mipmap/yuan"
                    android:drawablePadding="2dp"
                    tools:text="全品类可用"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/appText10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/redpacket_time"
                    android:drawableLeft="@mipmap/yuan"
                    android:drawableStart="@mipmap/yuan"
                    android:drawablePadding="2dp"
                    tools:text="2016-11-27至2016-12-1"
                    android:textSize="11sp"
                    android:textColor="@color/appText10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <ImageView
                android:visibility="gone"
                android:id="@+id/status"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@mipmap/yishiyong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="5dp"
                android:layout_marginTop="35dp"
                android:id="@+id/use_this"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/use_conpont_btn_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/decorateP"
                android:gravity="center"
                android:text="立即使用"
                />
            <ImageView
                android:layout_marginTop="35dp"
                android:id="@+id/gou"
                android:layout_marginRight="12dp"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:src="@mipmap/duigou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>




</LinearLayout>