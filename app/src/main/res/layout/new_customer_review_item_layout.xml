<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myrating="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingTop="12dp"
    android:paddingRight="16dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_gravity="top"
            android:scaleType="fitCenter"
            app:riv_oval="true"
            android:id="@+id/photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@mipmap/home_icon"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/appText3"
                android:textSize="10sp"
                android:id="@+id/telephone"
                tools:text="12345609873"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/appText3"
                android:textSize="10sp"
                android:id="@+id/date"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                tools:text="2015-11-23  11:25"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <com.homepaas.sls.ui.widget.MyRatingBar
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:id="@+id/rating_bar"
            myrating:mImageWidth="12dp"
            myrating:mImageHeight="12dp"
            myrating:mClickImageId="@mipmap/star"
            myrating:mDefaultImageId="@mipmap/star2"
            myrating:mHalfImageId="@mipmap/star3"
            myrating:mMargin="1px"
            myrating:mStarChoose="0"
            myrating:mStarNum="5"
            myrating:mScope="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/comment_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/homepageServerText1"
            android:textSize="12sp"
            tools:text="这是评价内容，你说写点什么好呢？要测试格式咩，你说测不测噶，你自己讲咩，呵呵哒"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/phones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="@string/layoutManager_LinearLayout"/>
    </LinearLayout>

</LinearLayout>